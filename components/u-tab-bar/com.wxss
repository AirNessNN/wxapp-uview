/* components/u-tab-bar/com.wxss */

@import "../base-style.wxss";

.con {
  max-width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.bar-con {
  font-weight: 900;
  height: 80rpx;
  padding: 20rpx;
  font-weight: 900;
  max-width: max-content;
}

.line {
  min-width: 10rpx;
  position: absolute;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: var(--primary);
  transition: all 0.3s ease;
  opacity: 0.5;
}