/* components/u-button/com.wxss */

@import "../base-style.wxss";


.con {
  position: relative;
}

.btn, .btn-large, .btn-small, .btn-x-large{
  min-width: 100rpx;
  width: max-content;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 10rpx;
  font-size: var(--text-size-content);
  transition: all 0.3s linear;
  position: relative;
}



.btn-large {
  min-width: 130rpx;
  height: 80rpx;
  padding: 0 30rpx;
}

.btn-x-large {
  min-width: 150rpx;
  height: 100rpx;
  padding: 0 50rpx;
  font-size: var(--text-size-title);
}

.btn-small {
  min-width: 120rpx;
  height: 55rpx;
  padding: 0 10rpx;
  font-size: var(--text-size-description);
}

.text {
  max-width: unset;
  background-color: unset;
}

.text-hover {
  background-color: var(--primary-hover);
  transition: all 0.3s linear;
}

.block {
  width: 100%;
  box-sizing: border-box;
  border-radius: 0;
}

.shadow {
  box-shadow: var(--shadow-btn);
}


.text-btn-bg {
  opacity: 0.3;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  transition: all 0.3s;
}




.icon, .icon-large, .icon-small, .icon-x-large{
  width: 70rpx;
  padding: 0;
  line-height: 70rpx;
  text-align: center;
  transition: all 0.3s linear;
  font-size: var(--text-size-content);
  position: relative;
}

.icon-large {
  width: 80rpx;
  line-height: 80rpx;
  height: 80rpx;
  font-size: var(--text-size-title);
}

.icon-small {
  font-size: var(--text-size-description);
  width: 55rpx;
  line-height: 55rpx;
}

.icon-x-large {
  font-size: var(--text-size-title);
  width: 100rpx;
  line-height: 100rpx;
  height: 100rpx;
}