/* components/u-button/com.wxss */

@import "../base-style.wxss";


.con {
  position: relative;
}

.mask {
  width: 30rpx;
  height: 30rpx;
  border: 5rpx dotted;
  border-radius: 50%;
}

.btn, .btn-large, .btn-small, .btn-x-large{
  min-width: 100rpx;
  width: max-content;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 10rpx;
  font-size: var(--text-size-content);
  transition: all 0.3s linear;
  position: relative;
}

.icon{
  min-width: 70rpx;
  padding: 0;
  line-height: 70rpx;
  text-align: center;
}

.btn-large {
  min-width: 130rpx;
  height: 80rpx;
  padding: 0 30rpx;
}

.btn-x-large {
  min-width: 150rpx;
  height: 100rpx;
  padding: 0 50rpx;
  font-size: var(--text-size-title);
}

.btn-small {
  min-width: 120rpx;
  height: 55rpx;
  padding: 0 10rpx;
  font-size: var(--text-size-description);
}

.text {
  background-color: unset;
}

.text-hover {
  background-color: var(--primary-hover);
  transition: all 0.3s linear;
}

.block {
  width: 100%;
  box-sizing: border-box;
  border-radius: 0;
}

.shadow {
  box-shadow: var(--shadow-btn);
}


.text-btn-bg {
  opacity: 0.3;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  transition: all 0.3s;
}
